[
  {
    "context": "Workspace",
    "bindings": {
      // "space f": "file_finder::Toggle"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-o": ["terminal::SendKeystroke", "ctrl-o"],
