# Take a screenshot with all output and save it into screenshots
bindsym Print exec grim -t jpeg ~/Pictures/Screenshots/$(date +%Y-%m-%d_%H-%m-%s).jpg
bindsym $mod+Print   exec grim -t jpeg -g "$(slurp)" ~/Pictures/Screenshots/$(date +%Y-%m-%d_%H-%m-%s).jpg
bindsym $mod2+Print  exec grim -t jpeg -g "$(slurp)" ~/Pictures/Screenshots/$(date +%Y-%m-%d_%H-%m-%s).jpg
bindsym Shift+Print  exec grim -t jpeg -g "$(slurp)" ~/Pictures/Screenshots/$(date +%Y-%m-%d_%H-%m-%s).jpg

# Unfuck launching GNOME apps (takes 20 seconds otherwise)
exec systemctl --user import-environment
exec systemctl --user start sway-session.target
# TODO: not sure if this is needed anymore, getting off GNOME
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

# Startup commands
exec mako

set $WOBSOCK $XDG_RUNTIME_DIR/wob.sock
# TODO: figure out why these two can't go in the same line, and fix the initial bar showing on sway load
exec mkfifo $WOBSOCK
exec tail -f $WOBSOCK | wob
exec udiskie
